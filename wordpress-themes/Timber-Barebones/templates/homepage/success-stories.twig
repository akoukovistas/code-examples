<div class="container-fluid success-stories-container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h2 class="section-title">LATEST SUCCESS STORIES</h2>
        </div>
    </div>
    <div class="row success-slider-wrapper">
        <div id="success-slider">
            <ul>
                {% for caseStudy in caseStudies %}
                    <li>
                        <div class="col-md-10 col-md-offset-1">
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="{{ caseStudy.get_permalink }}" target="_blank"><img class="img-responsive" src="{{caseStudy.get_thumbnail }}"></a>
                                </div>
                                <div class="col-md-6 case-study-info">
                                    <div class="row">
                                        <div class="col-md-12 basic-info">
                                            <h3>{{ caseStudy.get_title }}</h3>
                                            <div class="sep"></div>
                                            <p>{{ caseStudy.get_preview(19,false,false,true,'') }}</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 text-center left">
                                            <div class="featured-box-left">{{ caseStudy.get_field('featured_box_left') }}</div>
                                        </div>
                                        <div class="col-md-6 text-center right">
                                            <div class="featured-box-right">{{ caseStudy.get_field('featured_box_right') }}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="row cta-wrapper text-center">
        <div class="col-md-12">
            <a class="btn cta">SEE ALL OUR SUCCESS STORIES</a>
        </div>
    </div>
</div>